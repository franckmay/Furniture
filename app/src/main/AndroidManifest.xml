            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".ConnexionActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:theme="@style/MyAppTheme"
            android:windowSoftInputMode="stateHidden|adjustPan" />
